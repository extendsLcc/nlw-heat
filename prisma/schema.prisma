// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  name      String
  githubId  Int    @map(name: "github_id")
  avatarUrl String @map(name: "avatar_url")
  login     String

  @@map("users")
}
